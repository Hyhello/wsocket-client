{
    "compilerOptions": {
        "baseUrl": ".",
        "target": "es5",
        "allowJs": false,
        "strict": true,
        "noEmit": true,
        "importHelpers": false,
        "noUnusedLocals": true,
        "removeComments": false,
        "strictNullChecks": true,
        "lib": ["dom"],
        "paths": {
            "@/*": ["src/*"],
            "@globalType/*": ["types/*"]
        }
    },
    "include": [
        "src",
        "types"
    ]
}
