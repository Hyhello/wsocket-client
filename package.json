{
    "name": "wsocketjs-client",
    "version": "0.6.0",
    "description": "WebSocket for browser",
    "author": "hyhello <673089899@qq.com>",
    "main": "lib/wsocketjs.min.js",
    "types": "./types/index.d.ts",
    "license": "MIT",
    "scripts": {
        "prepare": "husky install",
        "lint": "tsc && eslint --ext .ts src",
        "build": "rimraf lib && node ./scripts/build.js"
    },
    "lint-staged": {
        "src/**/*.{ts}": [
            "npm run lint --fix"
        ]
    },
    "keywords": [
        "browser",
        "socketjs",
        "websocket"
    ],
    "files": [
        "lib",
        "types"
    ],
    "bugs": {
        "url": "https://github.com/Hyhello/wsocket-client/issues"
    },
    "repository": {
        "type": "git",
        "url": "git@github.com:Hyhello/wsocket-client.git"
    },
    "release-it": {
        "hooks": {
            "before:init": [
                "npm run lint",
                "npm run test"
            ],
            "after:bump": [
                "npm run build"
            ]
        },
        "plugins": {
            "@release-it/conventional-changelog": {
                "preset": "angular",
                "header": "# 更新日志",
                "infile": "./CHANGELOG.md"
            }
        }
    },
    "publishConfig": {
        "access": "public",
        "registry": "https://registry.npmjs.org"
    },
    "directories": {
        "lib": "lib"
    },
    "devDependencies": {
        "@release-it/conventional-changelog": "^5.0.0",
        "@rollup/plugin-commonjs": "^22.0.0",
        "@rollup/plugin-node-resolve": "^13.3.0",
        "@typescript-eslint/eslint-plugin": "^5.20.0",
        "@typescript-eslint/parser": "^5.20.0",
        "eslint": "^8.15.0",
        "eslint-config-prettier": "^8.5.0",
        "eslint-plugin-prettier": "^4.0.0",
        "husky": "^7.0.4",
        "lint-staged": "^12.3.2",
        "prettier": "^2.6.2",
        "release-it": "^15.0.0",
        "rimraf": "^3.0.2",
        "rollup": "^2.75.3",
        "rollup-plugin-filesize": "^9.1.2",
        "rollup-plugin-terser": "^7.0.2",
        "rollup-plugin-typescript2": "^0.31.2",
        "typescript": "^4.6.4"
    }
}
